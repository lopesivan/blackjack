{
  "README.md":      { "type": "readme" },
  "main.py":        {
    "type": "main",
    "make": "python {file|basename}",
    "start": "ptpython --vi --interactive={file|basename}",
    "dispatch": "bpython -i {file|basename}"
  },
  "cartas/*.py":     {
    "type": "cartas",
    "make": "python {file|basename}",
    "start": "ptpython --vi --interactive={file|basename}",
    "dispatch": "bpython -i {file|basename}"
  }
}
